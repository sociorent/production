<!--Partial template for ini=itial stage item view  -->
<%items.each do |p| %>

  <div class="product">
    

    <a href="<%= "/p2p/view/" +  p.id.to_s %>" > 
      <div class="product_img">
       <img src="<%= p.get_image(1,1)[0][:url]%>" alt="Picture coming Soon...." width="100px" height="50px"></img>
      </div>


      <div class="product_title">
        <em><%= p.title.slice(0,25)  %></em> 
      </div>
    </a>
                
      <div class="product_tag">
      <em><del>&#2352;</del> <%=p.price %></em> 
      </div>
   
      
      
  </div>
<% end %>
