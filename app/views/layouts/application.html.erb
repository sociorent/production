<!DOCTYPE html>
<html>
<head>
  <title>Sociorent</title>
  <%= stylesheet_link_tag    "global/application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <p class="rails_notice"><%= notice %></p>
  <p class="rails_alert"><%= alert %></p>

  <!-- Header -->
  <div id="header_fixed">
    <div id="header">
      <div class="left">
        socio rent
      </div>
      <div class="right">
        <div>
          <% if current_user %>
            <%= link_to "SignOut", destroy_user_session_path, :method => :delete %>
          <% else %>
            <%= link_to "SignUp/SignIn", user_omniauth_authorize_path(:facebook) %>
          <% end %>
        </div>
        <div>Pricing</div>
        <div>Resource Blog</div>
        <div class="clear"></div>
      </div>
      <div class="clear"></div>
    </div>
  </div>
  <% if current_user %>
    <div id="user">
      Welcome, <%= current_user.name %>
    </div>
  <% end %>

<div id="content">
	<%= yield %>
</div>

</body>
</html>
