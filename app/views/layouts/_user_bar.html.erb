


<% if current_user %>
  <div id="user">
    <div class="left">
      <div style="width:100%">Welcome, <%= current_user.name %></div>
    </div>
    <div class="right">
      <div class="menu_button">
        <%= link_to "SignOut", destroy_user_session_path, :method => :delete %>
