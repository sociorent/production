

<%= simple_nested_form_for @p2p_category do |f| %>


  	<%= f.input :name%>
 	<%= f.input :priority %>
 	<%= f.input :courier_charge %>
 	<%= f.input :commission %>
	<%= f.association :category %>

	<table class="table table-bordered table-striped">
		<tr>
			<th class="span2">Product Name</th>
			<th class="span1">Action</th>
		</tr>

		<%= f.fields_for :products do |product| %>
			<tr>
				<td> <%= product.text_field  :name   %> </td>
				<td> <%= product.link_to_remove '<i class="icon-trash"></i>'.html_safe %> </td>
			</tr>
		<% end %>

	</table>

	<%= f.fields_for  :specs  do |spec| %>

	  <%= spec.label  :name ,"Specification" %>	
	  <%= spec.text_field  :name %>
	  <%= spec.input  :show_filter %>
	  <%= spec.link_to_remove '<i class="icon-trash"></i>'.html_safe %>
	<% end %>

	<p><%= f.link_to_add "Add a Spec", :specs %></p>

	<p><%= f.link_to_add "Add a Product", :products %></p>

	<%= f.submit :class =>"btn" %>

<% end %>