<script type="text/javascript">

  $("#login_box").dialog({
    autoOpen: false,
    draggable: false,
    title:'Login',
    width: 650,
    resizable: false,
    modal: true
  });


  $(".login_error_msg").html("");
  $("#login_box_left_login form").live("submit",function(){
    if($(this).valid())
    {
      $("#loading_div").fadeIn();
      $.ajax({
        url: "/users/sign_in",
        type:"post",
        data:$("#login_box_left_login form").serialize(),
        complete: function (jqxhr, txt_status) {
          if(jqxhr.status==200){
            location.reload();
          }
          else{
            $("#loading_div").fadeOut();
              $(".login_error_msg").html(jqxhr.responseText);

          }
        }
      });
     }
    return false;

  });
  $(".forgot_password_form").live("submit",function(){
    $("#loading_div").fadeIn();
    $.ajax({
      url: "/users/password",
      type:"post",
      data:$(".forgot_password_form").serialize(),
      complete: function (jqxhr, txt_status) {
        if(jqxhr.status==200){
            $(".forgot_error").html("Check the Mail For Password Instructions");
        }
        else{
            $(".forgot_error").html("Error Occured");
        }

        $("#loading_div").fadeOut();
      }
    });
    return false;
  })




  $(".open_login_popup").live ("click", function(){
    try{
      $("#book_details").dialog ("close");
    }
    catch(ex){}

    $("#login_box").dialog( "open");
  });


  $("a[href='/users/sign_in']").hide();

  $("#devise_pages a").click(function(){

      var action = $(this).text();

      $("#login_box").dialog('option','title',action)

      switch(action) {

        case "Login" :{
          $("#login_box_left .boxes").slideUp(0);
          $("#login_box_left_login").slideDown(200);
          break;
        }

        case "Sign Up": {
          $("#login_box_left .boxes").slideUp(0);
          $("#login_box_left_signup").slideDown(200);
          break;
        }

        case "Forgot Password?": {
          $("#login_box_left .boxes").slideUp(0);
          $("#login_box_left_password").slideDown(200);
          break;
        }
      }

      $("#devise_pages a").css("display","none");
      $("#devise_pages a").each (function(ele){
        if ($(this).text() != action)
          $(this).show();
      });

      return false
    });
</script>