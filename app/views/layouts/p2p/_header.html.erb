<div id="header"> 
	
	<%= render 'home/login' %>

	<div id="header_container">

			<div id="top_logo" class="pull-left">
				SocioRent P2P
			</div>

			<div id="top_search_form" class="pull-left">
					<div class="input-append">
						<input type="text" class="span4"  id="appendedInputButton" placeholder="What are you looking for?">
						<button class="btn btn-" type="button"> <i class="icon-search"></i> </button>
					</div>
			</div>

			<div class="pull-right">

				<% if current_user %>

					<strong class="btn"> <%= current_user.name  %> </strong> 
					<span class="btn"> 
						<!-- TODO: Correct Signout -->
					<%= link_to "SignOut", destroy_user_session_url, :method => :delete %>
					 </span>

				<% else %>

					<a href="#login_box" role="button" class="btn" data-toggle="modal">Login</a>
					
				<% end %>

			</div>

	</div>
	<div class="clearfix"></div>


	
</div>
