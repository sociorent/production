
<%= stylesheet_link_tag 'p2p/search_category_menu'%>

<div id="page_content">

	<div id="search_left" class="pull-left">

		<%= render "/p2p/index/items_menu" %>

		<div  class=" menu pull-left" >
							<div class="menu_title">Search Category</div>

						<div class="menu_contents">
							<span class="menu_element">All Categories</span>
							<% @products.each do |aprod| %>

								<a class="menu_element" href="/p2p/<%= aprod.category.name %>/<%= aprod.name %>">
									<%= aprod.category.name %> -> <%= aprod.name %> (<%= aprod.items.count %>) 
								</a>
							<% end %>

						</div>

						
		</div>
		<div class="clearfix"></div>
</div>


<div id="search_content" class="pull-left span9">

		<% @products.each do |prod| %>
			
			<% next if prod.items.count ==0 %>

			<div class="search_acategory">
				<div class="search_acategory_title">
					Featured in <%= prod.category.name %>(<%= prod.name %>)
					<span class="pull-right">
						<a  class=" label label-info in_nav" href="/p2p/<%=prod.category.name%>/<%=prod.name%>">See all <%= prod.items.count %> </a>
					</span>
				</div>

				<div class=" search_acategory_content">
					<%= render "p2p/index/item" ,:items => prod.items.limit(5) %>
				</div>

				<div class="clearfix"></div>
			</div>
		<% end %>

	<div class="clearfix"></div>
</div>

<div class="clearfix"></div>
</div>