
<div id="Itemlist" class="row">
    <div id="filters" class="span2 ">

      <ul class="nav nav-list" id="browse_menu">

		
        <%= render "scat_menu" , :active_page => @cat.name ,:dropdown => true %>

        <%= render "p2p/index/filter" , :category => @cat %>

      </ul>
    </div>

<div id="items" class="span10">

	
<!--
	<div id="browse_sort">


		<span class="pull-right">Sort


		<select id="sort_browse_items">
				<option>Relevance</option>
				<option>Price -> High to Low</option>
				<option>Price -> High to Low</option>
			</select>
