<% url = (@p2p_product.new_record?) ? street_products_path : street_product_path(@p2p_product) %>

<%= simple_form_for @p2p_product, :url => url do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :category %>
    <%= f.input :priority %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
