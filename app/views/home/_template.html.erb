<script type="script/template" id="book_details_template">
	<div class="book_heading"><%%= name %></div>
	<div class="left">
		
		<div class="book_image">
			<img src="<%%= book_image %>"/>
		</div>	
		<div class="auther_edition">
			<div class="edition"><b>Edition <%%= edition %></b></div>
			<div class="author">Author(s): <p><span class="blue"><%%= author %></span></p></div>
