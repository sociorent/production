<% url = (@p2p_spec.new_record?) ? street_specs_path : street_spec_path(@p2p_spec) %>
<%= simple_form_for @p2p_spec, :url=>url do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :priority %>
    <%= f.association :category %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
