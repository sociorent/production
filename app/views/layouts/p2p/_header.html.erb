                <div id="head_login_modal" class="modal hide fade span9" tabindex="-1" role="dialog" aria-labelledby="head_login_modalLabel" aria-hidden="true">
                <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="head_login_modalLabel">Login</h3> (If you are an existing Sociorent user, you can login with same credentials)
                </div>

                <div class="modal-body span7" id="login_popup_content">

                  <div class="pull-right">
                        <a class="fb_big_logi" href="/users/auth/facebook"></a>
                  </div>

                  <div id="login_box" class="boxes">
                    <%= render :template => "devise/sessions/new" %>
                  </div>

                  <div id="signup_box" class="boxes">
                    <%= render :template => "devise/registrations/new" %>
                  </div>
                  <div id="forgot_box" class="boxes">
                    <%= render :template => "devise/passwords/new" %>
                  </div>

                </div>

                </div>

                <div id="seller_mobile_verify_modal" class="modal hide fade span9" tabindex="-1" role="dialog" aria-labelledby="mobile_verify_modalLabel" aria-hidden="true">
                <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h3 id="mobile_verify_Label">Verify Your Mobile Number </h3>
                </div>
                <div class="modal-body span7">
                   <div class="control-group">
                      <label class="control-label">Enter Mobile</label>
                      <div class="controls">
                        <input type="text" id="seller_mobile_number" value = "<%= current_user.mobile_number if current_user %>" class="input text" >
                      </div>
                    </div>

                    <div class="control-group">
                      <label class="control-label"> Verification Code:</label>
                      <div class="controls">
                        <button class="btn  btn-primary" id="seller_send_verify_code">
                          Send
                        </button>
                      </div>
                    </div>

                    <div class="control-group">
                      <label class="control-label"> Enter Code:</label>
                      <div class="controls">
                        <input type="text" id="seller_verify_mobile" class="input text" >
                      </div>

                    </div>

                    <div class="control-group">
                      <label class="control-label"> </label>

                      <div class="controls">
                        <button class="btn " id="seller_verify_code_submit">Verify Code</button>
                      </div>

                    </div>
                </div>

                </div>


