<style>
	.book_single{
		border: 1px solid #DDD;
		border-radius: 8px;
		float: left;
		width: 113px;
		padding: 8px;
		margin: 10px;
		height: 175px;
		overflow: hidden;
	}
	.book_single img{
		display: block;
	}
	.book_single .name{
		color: #08C;
		width: 100%;
		word-wrap: break-word;
	}
	.clear{
		clear: both;
	}
	#show_more{
		background: #DDD;
		text-align: center;
		border-radius: 8px;
		padding: 5px 0px;
		cursor: pointer;
	}
</style>
<div id="rented_box">
	
	<div id="counter"></div>

	<div id="rented">
		<% @rented_books.each do	|book| %>
			<div class="book_single">
				<img src='<%= book.book_image %>' />
				<div class="name"><%= book.name %></div>
			</div>
		<% end %>
		<div class="clear"></div>
	</div>

	<div id="show_more">Show more</div>

</div>

<script type="text/javascript">
	$(document).ready(function(){
		window.offset = 1;
		$("#show_more").click(function(){
			window.offset++;
			$.ajax("/orders/rented_show_more", {
				type:"post",
				async:true,
				data: {
					offset: window.offset
				},
				success: function(msg){
					if (msg.length > 0){
						html = "";
						for(var i in msg){
							html += "<div class='book_single'>";
							html += "<img src='"+ msg[i].book_image +"'/>";
							html += "<div class='name'>" + msg[i].name +"</div>";
							html += "</div>";
						}
						$(html).insertBefore(".clear");
					} else{
						$("#show_more").hide();
					}
				}
			});
		});

	});
</script>