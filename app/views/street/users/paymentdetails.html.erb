              </tr>
            </tbody>

            </table>

            <%= will_paginate(@payments , :renderer => BootstrapPagination::Rails) %>
            <br />
            <% else %>
                <h5>No payments done yet !!</h5>
            <% end %>
            <%#= link_to 'New Item delivery', new_p2p_item_delivery_path %>
</div></div>

<%= javascript_include_tag '/assets/p2p/payments' %>

