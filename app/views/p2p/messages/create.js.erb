$(".close").trigger("click");
showNotifications('Message sent');

// update sender
<% @outgoing_channel = "/user_#{@receiver_id}"%>
<% publish_to @outgoing_channel do %>
	// reload the table
	if (oInboxTable) {
		oInboxTable.fnDraw();
	}

	// change the unread count
  $("#unread_count").html("(<%=@sender_unreadcount%>)");

	<%= @message_notification.html_safe %>

  $("#header_msg_count").html("(<%=@sender_unreadcount%>)");
<% end %>


// update receiver
<% @outgoing_channel = "/user_#{p2p_current_user.id}"%>
<% publish_to @outgoing_channel do %>
	// reload the table
	if (oSentBoxTable) {
		oSentBoxTable.fnDraw();
	}

<% end %>
