
<% content_for :pagetitle  do %>
    Products  -Admin
<%end %>



<div class="row" id="body_content" >

     <div class="span3">

      <ul class="nav nav-list">

        <%= render "/street/users/dashboard_menu.html.erb" %>
        <%#= render "/street/index/scat_menu" %>

      </ul>
    </div>


<div class="span9">


    <h1>Listing Product</h1>

    <%= link_to '<h5><i class="icon-plus-sign-alt"></i> New Product</h5>'.html_safe, new_street_product_path %>

    <table class="table table-bordered table-striped">

      <tr>
        <th>Name</th>

        <th>Priority</th>
        <th>Category</th>
        <th>Actions</th>

      </tr>

    <% @p2p_products.each do |p2p_product| %>
      <tr>
        <td><%= p2p_product.name %></td>

        <td><%= p2p_product.priority %></td>
        <td><%= p2p_product.category.name %></td>


        <td><%= link_to '<i class="icon-edit"></i>'.html_safe, edit_street_product_path(p2p_product) %>
        <%= link_to '<i class="icon-trash"></i>'.html_safe, p2p_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </table>

    <br />


</div></div>