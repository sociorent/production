
<% content_for :pagetitle  do %>
    Products  -Admin 
<%end %>

<h1>Listing p2p_products</h1>

<%= link_to '<h5><i class="icon-plus-sign-alt"></i> New Product</h5>'.html_safe, new_p2p_product_path %>

<table class="table table-bordered table-striped">

  <tr>
    <th>Name</th>

    <th>Priority</th>
    <th>Category</th>
    <th>Actions</th>
    
  </tr>

<% @p2p_products.each do |p2p_product| %>
  <tr>
    <td><%= p2p_product.name %></td>

    <td><%= p2p_product.priority %></td>
    <td><%= p2p_product.category.name %></td>

    
    <td><%= link_to '<i class="icon-edit"></i>'.html_safe, edit_p2p_product_path(p2p_product) %>
    <%= link_to '<i class="icon-trash"></i>'.html_safe, p2p_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


