<div id="Itemlist" class="row">
    <div id="filter" class="span2">


      <ul class="nav nav-list" id="browse_menu">

        <%= render "scat_menu" , :active_page => @cat.name %>

        <li class="nav-header">OS</li>
        <li class="active"><a href="#">Home <i class="icon-remove"></i></a></li>
        <li><a href="#">Library</a></li>
        <li><a href="#">Applications</a></li>


        <li class="divider"></li>

        <li class="nav-header">Memory</li>
        <li><a href="#">Profile</a></li>
        <li><a href="#">Settings</a></li>
        <li><a href="#">Help</a></li>

      </ul>
    </div>

<div id="items" class="span10">


        <div id="listHeader" class="row">
          <p class="fleft"> <b><%= @cat.name.pluralize.titlecase %> </b></p>
          <p class="fright"><a href="/p2p/search/c/<%= @cat.name %>"> View All</a></p>
        </div>

<!--
	<div id="browse_sort">


		<span class="pull-right">Sort


		<select id="sort_browse_items">
				<option>Relevance</option>
				<option>Price -> High to Low</option>
				<option>Price -> High to Low</option>
			</select>
		</span>

	</div>
-->
	

		<% @products.each do |prod| %>
					      <div class="itemsRow">

					        <div id="listHeader" class="row">
					          <p class="fleft"> <b><%= prod.name.pluralize.titlecase %> </b></p>
					          <p class="fright"><a href="/p2p/<%=@cat.name%>/<%=prod.name%>"> View All</a></p>
					        </div>

			        <ul class="thumbnails">
			        
			        <% prod.items.limit(5).each do |p| %>

			          <li class="span2">
			            <a href="/p2p/<%=p.product.category.name%>/<%=p.product.name%>/<%=p.title%>">
			              <div class="thumbnail">
			                <img src="<%=p.get_image(1,:search)[0][:url]%>" >
			                <div class="caption">
			                  <b><%= p.title.slice(0,10)  %></b>
			                  <p>

			                    <ul>
			                      <li><del>&#2352;</del> <%=p.price %></li>
			<!--                              <li>Attribute 2</li>
			                      <li>Attribute 3</li>
			-->                              
			                    </ul>
			                  </p>

			                </div>
			              </div>
			            </a>
			          </li>
			      <% end %>

			      </ul>

			</div>
	<% end %>

	


  </div>

 </div>


<script>
	$(document).ready(function(){
		$("#browse_content_items").masonry({
			itemSelector:'.product',
			isAnimated: true
		});
	});
</script>