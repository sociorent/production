<% content_for :pagetitle  do %>
    Welcome
<%end %>

  <!-- listing the Categories Browse By category -->
  <div class="clearfix"></div>
  <div  class="row" id="index_menu_holder">
    <ul class="span11">
      <li> Browse by Category</li>
      <%used_cat = [] %>
        <%used_cat.push(0)%>
        <% @main_categories.each do |cat|%>
          <% used_cat.push(cat.id) %>
          <li>
            <a  href="/p2p/<%= cat.name %>" class="btn" ><%= cat.name %></a></li>
        <% end %>
      </div>
    </div>

    <!-- List Section -->
    <div id="Itemlist" class="row">

        <div id="items" class="span12">

          <% @category_items.each_with_index do |(category_name,items),index| %>
            <!-- loop and display only if the categories has products and items in it. -->
               <div class="itemsRow">
                <div id="listHeader" class="row"><a href="/p2p/<%= category_name %>">
                  <p class="header_title"> <b><%= category_name %> </b></p>
                  <p class="header_view_all">View All</p></a>
                </div>
                <ul class="thumbnails">

        <!--           order the items by reqcount first, then by view count
                  used to list the most viewed and most wanted items at top
                  #TODO: THE NEW ITEMS WILL NEVER TURN UP TOP IN THE LIST

                  SO DO SOMETHING FOR THAT(DISCUSS)
        -->     <% items.each do |p| %>
                    <li class="span2 aitem_holder">
                        <div class="thumbnail">
                                <a href="<%= URI.encode("/p2p/#{p.category.name}/#{p.product.name}/#{p.title}")%>">
                                  <div class="aitem_left">
                                      <div class="image_holder">
                                        <img src="<%=p.get_image(1,:search)[0][:url]%>" >
                                      </div>
                                  </div>
                                </a>

                              <div class="aitem_right">
                                 <a href="<%= URI.encode("/p2p/#{p.product.category.name}/#{p.product.name}/#{p.title}")%>">
                                  <div  title="<%= p.title %>">
                                    <div class="item_title"><%= p.title.titleize  %></div>
                                  </div>
                                </a>

                                <div class="item_category">

                                  in
                                  <a href="<%= URI.encode("/p2p/#{p.product.category.name}/#{p.product.name}") %>">
                                    <%= p.product.name  %>
                                  </a>
                                  ,
                                  <a href="<%= URI.encode("/p2p/#{p.product.category.name}")%>">
                                    <%= p.category.name  %>
                                  </a>


                                </div>
                                        <div class="item_condition"><%=p.condition%></div>
                                      <div class="item_price">Price:<del>&#2352;</del> <%=p.price %>
                                </div>
                                <div class="buy_now"><a href="<%= URI.encode("/p2p/#{p.product.category.name}/#{p.product.name}/#{p.title}")%>">Buy Now</a></div>
                              <div class="clearfix"></div>
                      </div>
                      <div class="clearfix"></div>
                    </li>
                <% end %>
                </ul>
              </div>
            <% end %>
        </div>
        <!-- List Section -->
    </div>
</div>