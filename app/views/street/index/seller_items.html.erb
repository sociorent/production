<% content_for :pagetitle  do %>
		Welcome
<%end %>

	<!-- listing the Categories Browse By category -->
	<div class="clearfix"></div>
	<div class="listheader">
				<b><%=params[:name]%> </>
  </div>

		<!-- List Section -->
		<div id="Itemlist" class="row">
				<div id="items" class="span12">
					
							 <div class="itemsRow">
								
								<ul class="thumbnails">

				    <% @items.each do |p| %>
										<li class="span3 aitem_holder">
												<div class="thumbnail">
																<a href="<%= URI.encode("/street/#{p.category.name.gsub(/ /,"-")}/#{p.product.name.gsub(/ /,"-")}/#{(p.title).gsub(/ /, "-")}/#{p.id}")%>">
																	<div class="aitem_left">
																			 <img src="<%=p.get_image(1,:search)[0][:url]%>" >
																 </div>
																</a>

															<div class="aitem_right">
																 <a href="<%= URI.encode("/street/#{p.product.category.name.gsub(/ /,"-")}/#{p.product.name.gsub(/ /,"-")}/#{p.title.gsub(/ /,"-")}/#{p.id}")%>">
																	<div  title="<%= p.title %>">
																		<div class="item_title"><%= p.title.truncate(20).titleize  %></div>
																	</div>
																</a>

																<div class="item_category">
																	<a href="<%= URI.encode("/street/#{p.product.category.name.gsub(/ /,"-")}/#{p.product.name.gsub(/ /,"-")}") %>">
																		<%= p.product.name  %>
																	</a>
																	<a href="<%= URI.encode("/street/#{p.product.category.name.gsub(/ /,"-")}")%>">
																		<%= p.category.name  %>
																	</a>
																</div>
																				<div class="item_condition"><%=p.condition%></div>
																			<div class="item_price"><del>&#2352;</del> <%=p.price %>
																</div>
																<div class="buy_now"><a href="<%= URI.encode("/street/#{p.product.category.name.gsub(/ /,"-")}/#{p.product.name.gsub(/ /,"-")}/#{p.title.gsub(/ /,"-")}/#{p.id}")%>">Buy Now</a></div>
															<div class="clearfix"></div>
											</div>
											<div class="clearfix"></div>
										</li>
								<% end %>
								</ul>
							</div>
			
				</div>
				<!-- List Section -->
		</div>
