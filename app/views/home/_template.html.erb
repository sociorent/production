<script type="script/template" id="user_dialog_template">
	<div id="user_dialog_left">
		<div class="menu active" href="#profile">Edit Profile</div>
		<div class="menu" href="#orders_box" id="profile_orders_button">Orders</div>
		<div class="menu" href="#wishlist_box" id="profile_wishlist_button">Wishlist</div>
	</div>
	<div id="user_dialog_right">
		<div id="profile" class="menu_content">

			<form class="form-horizontal" id="profile_form">
				<legend>Update your Profile</legend>
			  <div class="control-group">
			    <label class="control-label" for="profile_name">Name</label>
			    <div class="controls">
			      <input type="text" id="profile_name" name="name" value="<%%= name %>" placeholder="Name">
			    </div>
			  </div>
