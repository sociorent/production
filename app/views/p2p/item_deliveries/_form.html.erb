<%= simple_form_for(@p2p_item_delivery) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">



<% if p2p_current_user.id ==1  or @p2p_item_delivery.item.user.id == p2p_current_user.id %>

    <div class="control-group">
      
      <div class="controls">
        <%= f.input :courier_name %>
      </div>

    </div>


    <div class="control-group">
      
      <div class="controls">
        <%= f.input :tracking_no %>
      </div>

    </div>

    <div class="control-group">

      <%= f.label :shipping_date %>     
      <div class="controls">
        <%= f.date_select :shipping_date ,:include_blank => true %>
      </div>

    </div>

  <% if p2p_current_user.id == 1 %>

    <div class="control-group">

        <%= f.label :shipping_charge %>     
        <div class="controls">
          <%= f.number_field :shipping_charge %>
        </div>

    </div>

  <% end %>

<% end %>

<% if p2p_current_user.id ==1  or @p2p_item_delivery.buyer.id == p2p_current_user.id %>

 	<div class="control-group">
  		
      <%= f.label :delivery_date %> 		
  		<div class="controls">
  			<%= f.date_select :delivery_date ,:include_blank => true  %>
  		</div>

  	</div>

 </div>

<% end %>



<% if p2p_current_user.id == 1%>

  <div class="control-group">

      <%= f.label :commission %>     
      <div class="controls">
        <%= f.number_field :commission %>
      </div>

  </div>

<% end %>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
