<script>

$(document).ready(function(){


<% unless current_user.nil? %>

	$("#file_add_image").change(function(){
			$("#add_image_form").submit();
	});

	$("#remove_image").click(function(){
		$.ajax({
			url:"/p2p/images/" + $("#view_image").attr("imgid"),
			type:"delete",
			dataType:"json",
			success:function(data){
				if (data.status == 1){
					$("#img_" +  $("#view_image").attr("imgid") ).remove();
				}
			}
		});
	});
	<% end %>

	$(".thumb_image").click(function(){
		console.log( $(this).attr("src"));
		$("#view_image").attr("src", $(this).attr("src"));
		$("#view_image").attr("imgid",$(this).attr("imgid"));

	});
});
	$("#view_image").click(function(){
		$("#lightbox_" + $("#view_image").attr("imgid")).trigger("click");

	});

	$("#image_list a").lightBox({
		imageLoading:"/assets/lightbox-ico-loading.gif",
		imageBtnClose: "/assets/lightbox-btn-close.gif",
		imageBtnPrev: "/assets/lightbox-btn-prev.gif",
		imageBtnNext: "/assets/lightbox-btn-next.gif"
	});

//load compose form
	<% if current_user.nil? %>
	$("#buy_now_button").click(function(){
		$("#login_box_button").trigger("click");
		return false;
	});

	<% end %>

//delete the item

</script>

