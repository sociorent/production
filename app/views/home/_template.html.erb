<script type="script/template" id="user_dialog_template">
	<div id="user_dialog_left">
		<div class="menu active" href="#profile" id="profile_edit_button">Edit Profile</div>
		<div class="menu" href="#orders_box" id="profile_orders_button">Orders</div>
		<div class="menu" href="#wishlist_box" id="profile_wishlist_button">Wishlist</div>
		<div class="menu" href="#shipping_box" id="profile_shipping_button">Shipping Address</div>
		<% unless @user.ambassador_manager.nil? %>
		<div class="menu" href="#ambassador_box" id="ambassador_button">My Referrals</div>
		<% end %>
	</div>
	<div id="user_dialog_right">
		<div id="profile" class="menu_content">

			<form class="form-horizontal" id="profile_form">
				<legend>Update your Profile</legend>
			  <div class="control-group">
			    <label class="control-label" for="profile_name">Name</label>
			    <div class="controls">
			      <input type="text" id="profile_name" name="name" value="<%%= name %>" placeholder="Name">
			    </div>
			  </div>
			  <div class="control-group">
			    <label class="control-label" for="profile_mobile_number">Phone number</label>
			    <div class="controls">
			      <input type="text" id="profile_mobile_number" name="mobile_number" value="<%%= mobile_number %>" placeholder="mobile_number">
			    </div>
			  </div>
			  <div class="control-group">
			    <label class="control-label" for="profile_college"  placeholder="Enter College Name">College</label>
			    <div class="controls">
			    	<input type="text" id="profile_college" value="<%%= college.name %>" name="college" autocomplete="off">
			    </div>
			  </div>
			  <div class="control-group">
			    <label class="control-label" for="profile_course">Course</label>
			    <div class="controls">
			    	<input type="text" id="profile_streams" name="stream" autocomplete="off"  placeholder="Enter Stream" value="<%%= stream.name %>">
			    </div>
			  </div>
			  <div class="control-group">
			    <div class="controls">
			      <button type="submit" class="btn">Update Profile</button>
			    </div>
			  </div>
			  <div id="profile_form_error"></div>
			</form>

		</div>
		<div id="orders_box" class="menu_content">
			<div id="orders_caption">Your Orders</div>
			<div id="orders"></div>
			<div id="orders_amount">
				<div id="all_orders_deposit_total">Total Deposit Amount: Rs.<span></span></div>
				<div id="all_orders_rental_total">Total Rental Amount : Rs.<span></span></div>
			</div>
		</div>
		<div id="wishlist_box" class="menu_content">
			<div id="wishlist_caption">Your Wishlist</div>
			<div id="wishlist"></div>
		</div>
		<div id="shipping_box" class="menu_content">
			<form class="form-horizontal shipping_form" id="profile_shipping_form">
				<legend>Shipping Address</legend>
			  <div class="control-group">
			    <label class="control-label" for="address_street_name1">Street1</label>
			    <div class="controls">
			      <input type="text" id="address_street_name1" name="address_street_name1" value="<%%= address.address_street_name1 || '' %>"  placeholder="Street1">
			    </div>
			  </div>
			  <div class="control-group">
			    <label class="control-label" for="street_name2">Street2</label>
			    <div class="controls">
			      <input type="text" id="address_street_name2" name="address_street_name2" value="<%%= address.address_street_name2 || '' %>" placeholder="Street2">
			    </div>
			  </div>
			  <div class="control-group">
			    <label class="control-label" for="address_street_name1">City</label>
			    <div class="controls">
			      <input type="text" id="address_city" name="address_city" value="<%%= address.address_city || '' %>" placeholder="City">
			    </div>
			  </div>
			  <div class="control-group">
			    <label class="control-label" for="address_state">State</label>
			    <div class="controls">
			     	<select id="profile_address_state" name="address_state">
			     	<% states.each do |state|%>
			     	 		<option value="<%=state%>" ><%=state%></option>
			     	<% end %>
			     	</select>
	   			</div>
			   </div>
			  <div class="control-group">
			    <label class="control-label" for="address_pincode">Pincode</label>
			    <div class="controls">
			      <input type="text" maxlength="6" id="address_pincode" name="address_pincode" value="<%%= address.address_pincode || '' %>" placeholder="Pincode">
			    </div>
			  </div>
			  <div class="control-group">
			    <div class="controls">
			      <button id="profile_update_shipping" type="submit" class="btn">Update Shipping</button>
			    </div>
			  </div>
			  <div id="shipping_form_error"></div>
			  <div id="profile_shipping_form_error"></div>
			</form>
		</div>
		<% unless @ambassador.nil? %>
			<div id="ambassador_box" class="menu_content">
				<div class="reference_title">Referred Users</div>
				<% if @users_of_ambassador.count > 0 %>
					<table class="table table-bordered referal_list">
              <thead>
                <tr>
                  <th>User</th>
                  <th>Order value</th>
                  <th>Rental amount</th>
                </tr>
              </thead>
              <tbody>
					<% @users_of_ambassador.each do |college,users| %>
						<tr><th colspan=3><%= college %></th></tr>
						<% users_have_orders= 0 %>
						<%if users.count>0 %>
							<% users.each do |user| %>
								<% order = user.orders %>
								<% if order.count > 0 %>
									<% users_have_orders = 1 %>
								 	<tr>
		                <td><%=user.name%></td>
		                <%current_order=0%>
		                <% order.each do |ord| %>
		                	<%= raw "</tr><tr><td></td>" if current_order > 0 %>
		                	<td><%=ord.total%></td>
		                	<td><%=ord.rental_total%></td>
		                	<%current_order+=1%>
		                <% end %>
		              </tr>
								<% end %>
							<% end %>
						<% end %>
						<% if users_have_orders == 0 %>
							<tr><th colspan=3>No more referrals </th></tr>
						<% end %>
					<% end %>
				<% else %>
					<legend> No refferals. </legend>
				<% end %>
					</tbody>
        </table>
			</div>
		<% end %>
	</div>
	<div class="clear"></div>
</script>

